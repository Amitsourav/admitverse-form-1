# AdmitVerse Environment Configuration
# Copy this file to .env.local and update with your values

# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Database Configuration (Future)
# DATABASE_URL=postgresql://username:password@localhost:5432/admitverse

# Email Service Configuration (Future)
# SENDGRID_API_KEY=SG.your_sendgrid_api_key
# EMAIL_FROM=noreply@yourdomain.com

# SMS Service Configuration (Future)
# TWILIO_ACCOUNT_SID=ACxxxxx
# TWILIO_AUTH_TOKEN=xxxxx
# TWILIO_PHONE_NUMBER=+1234567890

# Analytics Configuration (Future)
# GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
# MIXPANEL_TOKEN=xxxxx

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=false

# Security Configuration (Future)
# JWT_SECRET=your-super-secret-key-min-32-chars
# ENCRYPTION_KEY=your-encryption-key-32-chars

# Development Configuration
NODE_ENV=development
NEXT_TELEMETRY_DISABLED=1

# Rate Limiting (Future)
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration (Future)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=admitverse-uploads